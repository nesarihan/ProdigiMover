<?xml version="1.0"?>
<launch>

    <!-- IMU relay from prodigimover_msgs/Imu to sensor_msgs/Imu -->
    <node name="apply_calib" pkg="imu_calib" type="apply_calib" output="screen" respawn="false">
        <param name="calib_file" value="$(find prodigimover_bringup)/param/imu_calib.yaml" />
        <param name="calibrate_gyros" value="true" />
    </node>
    
    <!-- Filter and fuse raw imu data -->
    <node pkg="imu_filter_madgwick" type="imu_filter_node" name="imu_filter_madgwick" output="screen" respawn="false" >
        <param name="fixed_frame" value="robot_footprint" />
        <param name="use_mag" value="true" />
        <param name="publish_tf" value="false" />
        <param name="use_magnetic_field_msg" value="true" /> 
        <param name="world_frame" value="enu" />
        <param name="orientation_stddev" value="0.05" />
    </node>

    <!-- Publish static transform from base_footprint to imu_link -->
    <node pkg="tf2_ros" type="static_transform_publisher" name="robot_footprint_to_imu_link" args="0 0 0 0 0 0  /robot_footprint /imu_link"/>

</launch>